{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "removeComments": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "bin", "**/__mocks__*", "**/*.spec.**", "test", "assets"],
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ]
}